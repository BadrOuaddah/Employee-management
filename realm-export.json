{
  "realm": "SpringBootKeycloak",
  "enabled": true,
  "clients": [
    {
      "clientId": "employee-app",
      "enabled": true,
      "protocol": "openid-connect",
      "clientAuthenticatorType": "client-secret",
      "secret": "myClientSecret",
      "redirectUris": [
        "http://keycloak:9091/*"
      ],
      "baseUrl": "http://keycloak:9091",
      "publicClient": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocolMappers": [
        {
          "name": "Client Role Mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "config": {
            "client": "employee-app",
            "jsonType": "String",
            "role": "roles",
            "multivalued": "true",
            "tokenClaimName": "resource_access",
            "addToIdToken": "true",
            "addToAccessToken": "true",
            "addToUserinfo": "true"
          }
        }
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator with full access to manage the system"
      },
      {
        "name": "manager",
        "description": "Manager with permissions to manage employees"
      },
      {
        "name": "employee",
        "description": "Employee with basic access rights"
      }
    ],
    "client": {
      "employee-app": [
        {
          "name": "admin",
          "description": "Administrator with full access to manage the system"
        },
        {
          "name": "manager",
          "description": "Manager with permissions to manage employees"
        },
        {
          "name": "employee",
          "description": "Employee with basic access rights"
        }
      ]
    }
  },
  "users": [
    {
      "username": "adminUser",
      "enabled": true,
      "email": "admin@example.com",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "admin"
      ],
      "clientRoles": {
        "employee-app": [
          "admin"
        ]
      }
    },
    {
      "username": "managerUser",
      "enabled": true,
      "email": "manager@example.com",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "manager"
      ],
      "clientRoles": {
        "employee-app": [
          "manager"
        ]
      }
    },
    {
      "username": "employeeUser",
      "enabled": true,
      "email": "employee@example.com",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "employee"
      ],
      "clientRoles": {
        "employee-app": [
          "employee"
        ]
      }
    }
  ]
}
